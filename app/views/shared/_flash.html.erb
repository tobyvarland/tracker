<div class="row">
  <div class="col">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %> mt-3 mb-0"
           role="alert">
        <strong><%= message.html_safe %></strong>
        <button type="button"
                class="close text-<%= message_type %>"
                data-dismiss="alert"
                aria-label="Close">
          <span aria-hidden="true"><%= fa_icon "times" %></span>
        </button>
      </div>
    <% end %>
  </div>
</div>