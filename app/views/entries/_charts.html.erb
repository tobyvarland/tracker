<div class="card my-3 d-none d-md-block">
  <div class="card-header bg-dark text-warning font-weight-bold">
    <%= fa_icon "line-chart", text: "Charts" %>
  </div>
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs" id="chart-list" role="tablist">
      <li class="nav-item">
        <a  class="nav-link active"
            id="chart-tab-weight"
            data-toggle="tab"
            role="tab"
            href="#chart-weight">Weight</a>
      </li>
      <li class="nav-item">
        <a  class="nav-link"
            id="chart-tab-calories"
            data-toggle="tab"
            role="tab"
            href="#chart-calories">Calories</a>
      </li>
      <li class="nav-item">
        <a  class="nav-link"
            id="chart-tab-steps"
            data-toggle="tab"
            role="tab"
            href="#chart-steps">Steps</a>
      </li>
      <li class="nav-item">
        <a  class="nav-link"
            id="chart-tab-measurements"
            data-toggle="tab"
            role="tab"
            href="#chart-measurements">Measurements</a>
      </li>
    </ul>
  </div>
  <div class="tab-content">
    <div  class="tab-pane card-body fade show active"
          id="chart-weight"
          role="tabpanel">
      <div id="weight-chart" data-entries="<%= @entries.to_json %>">
      </div>
    </div>
    <div  class="tab-pane card-body fade"
          id="chart-calories"
          role="tabpanel">
      <div id="calorie-chart">
      </div>
    </div>
    <div  class="tab-pane card-body fade"
          id="chart-steps"
          role="tabpanel">
      <div id="step-chart">
      </div>
    </div>
    <div  class="tab-pane card-body fade"
          id="chart-measurements"
          role="tabpanel">
      <div id="measurement-chart">
      </div>
    </div>
  </div>
</div>